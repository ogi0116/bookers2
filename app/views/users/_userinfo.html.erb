<!--User info-->
<div class = "container">
 <div class = "row">
   <div class = "col-md-12">
    <table class = "table table-user">
      <h1>User info</h1>
      <h2><%= image_tag user.get_profile_image(100,100) %></h2>
      <tbody>
        <tr>
          <td>name</td>
          <td><%= user.name %></td>
        </tr>

        <tr>
          <td>introduction</td>
          <td><%= user.introduction %></td>
        </tr>

          <!--colspanでセルの結合ができる-->
        <tr>
          <td colspan ="2">
            <%= link_to edit_user_path(user), class:"btn btn-default btn-block btn-outline-dark"  do %>
             <i class = "fas fa-user-cog"></i>
             <!--上記:fas.fa-user-cogがサイトでヒットしない：メンター質問-->
            <% end %>
          </td>
         </tr>
      </tbody>
    </table>
   </div>
 </div>
</div>

  <!--ここまでがUser info(Userフォルダーに保存)-->

